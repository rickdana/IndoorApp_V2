<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Calibration"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="554dp"
        android:id="@+id/mapView"
        android:layout_gravity="center"
        android:src="@drawable/h_rdc"
        android:contentDescription="@string/desc"
        android:clickable="true"
        android:cropToPadding="false"
        android:adjustViewBounds="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapPin"
        android:src="@drawable/ic_location_on_grey600_36dp"
        android:clickable="true" />
    <com.software.shell.fab.ActionButton
        android:id="@+id/action_buttonN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:type="DEFAULT"
        fab:button_color="@color/fab_material_orange_500"
        fab:button_colorPressed="@color/fab_material_orange_900"
        fab:show_animation="@anim/fab_roll_from_down"
        fab:hide_animation="@anim/fab_roll_to_down"
        fab:image="@drawable/ic_close_black_24dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_gravity="bottom|right" />

    <com.software.shell.fab.ActionButton
        android:id="@+id/action_buttonY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:type="DEFAULT"
        fab:show_animation="@anim/fab_roll_from_down"
        fab:hide_animation="@anim/fab_roll_to_down"
        fab:button_color="@color/fab_material_cyan_500"
        fab:button_colorPressed="@color/fab_material_cyan_900"
        fab:image="@drawable/ic_check_black_36dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:longClickable="false" />



</FrameLayout>
