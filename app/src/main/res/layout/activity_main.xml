<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffffff">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Calibration"
        android:id="@+id/calibration_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#00BCD4"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Locate me !"
        android:id="@+id/localisation_btn"
        android:layout_below="@+id/calibration_btn"
        android:layout_alignLeft="@+id/calibration_btn"
        android:layout_alignStart="@+id/calibration_btn"
        android:layout_marginBottom="20dp"
        android:background="#009688"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ParamÃ¨tres"
        android:id="@+id/Param_btn"
        android:layout_below="@+id/localisation_btn"
        android:layout_alignLeft="@+id/localisation_btn"
        android:layout_alignStart="@+id/localisation_btn"
        android:background="#EF5350"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_utbm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_utbm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Indoor Positioning system APP"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LO53-UTBM-P2015"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
