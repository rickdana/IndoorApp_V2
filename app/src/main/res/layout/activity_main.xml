<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Calibration"
        android:id="@+id/calibration_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Locate me"
        android:id="@+id/localisation_btn"
        android:layout_below="@+id/calibration_btn"
        android:layout_alignLeft="@+id/calibration_btn"
        android:layout_alignStart="@+id/calibration_btn"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Parametre"
        android:id="@+id/Param_btn"
        android:layout_below="@+id/localisation_btn"
        android:layout_alignLeft="@+id/localisation_btn"
        android:layout_alignStart="@+id/localisation_btn" />
</RelativeLayout>
